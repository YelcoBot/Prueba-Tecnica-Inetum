@model Inetum.Modelo.LibroModel;
@{
    Layout = null;

    string Accion = ViewBag.Accion;
}

@using (Html.BeginForm("SaveOrUpdate", "Libro", FormMethod.Post, new { id = "FormLibro", onsubmit = "return false;" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m=> m.Isbn)
    @Html.TextBox("Tipo",Accion,new {type="hidden", id="Tipo"})

    <div class="form-row">
        <div class="form-group col-md-12">
            @Html.LabelFor(m=> m.Titulo)
            @Html.TextBoxFor(m=> m.Titulo, new {type = "text", @class="form-control", id="Titulo"})
        </div>
        <div class="form-group col-md-12">
            @Html.LabelFor(m=> m.EditorialId)
            @Html.DropDownList("EditorialId",(List<SelectListItem>)ViewBag.EditorialesItems,"Seleccione...", htmlAttributes: new { @class="form-control", id="EditorialId",style="width:100%;"})
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            @Html.LabelFor(m=> m.Autores)
            @Html.DropDownList("Autores[]",(List<SelectListItem>)ViewBag.AutoresItems,"Seleccione...", htmlAttributes: new { @class="form-control",multiple="multiple", id="Autores",style="width:100%;"})
        </div>
        <div class="form-group col-md-12">
            @Html.LabelFor(m=> m.NPaginas)
            @Html.TextBoxFor(m=> m.NPaginas, new {type = "number", @class="form-control", id="NPaginas"})
        </div>

    </div>

    <div class="form-row">
        <div class="form-group col-md-12">
            @Html.LabelFor(m=> m.Sinopsis)
            @Html.TextAreaFor(m=> m.Sinopsis,new { @class="form-control", id="Sinopsis"})
        </div>
    </div>

    <div class="form-row">
        <br/>
        <button type="submit" class="btn btn-primary btn-save">Guardar</button>
    </div>
}